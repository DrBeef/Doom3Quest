model worldmodel_handgrenade {
	mesh						models/md5/weapons/grenade_world/worldgrenade.md5mesh
	skin						skins/models/weapons/nade.skin

	anim idle 					models/md5/weapons/grenade_world/grenade_idle.md5anim
	anim fire					models/md5/weapons/grenade_world/grenade_throw.md5anim {
		frame 44				object_call GrenadeNoNade
		frame 69				object_call	GrenadeNade
	}
}

model viewmodel_grenade_vr {
	mesh						models/md5/weapons/grenade_view/viewgrenade_vr.md5mesh
	//offset						( 6 3 -3 )
	offset ( 0 0 0 )
	anim raise 					models/md5/weapons/grenade_view/viewgrenade_vr_raise.md5anim {
		frame	1				sound_weapon player_grenade_use
	}
	anim idle 					models/md5/weapons/grenade_view/viewgrenade_vr_idle.md5anim {
		frame 1					object_call GrenadeNade
	}
	anim putaway 				models/md5/weapons/grenade_view/viewgrenade_vr_lower.md5anim
	anim fire 					models/md5/weapons/grenade_view/viewgrenade_vr_fire2.md5anim 
	anim throw_start 			models/md5/weapons/grenade_view/viewgrenade_vr_start.md5anim {
		// frame 1 				sound_body player_handgrenade_throw
		// Was frame 6 -Xian
	}		
	anim throw 					models/md5/weapons/grenade_view/viewgrenade_vr_throw.md5anim {
		frame 1					object_call GrenadeNade
		frame 8					object_call GrenadeNoNade
	}

	anim throw_quick 			models/md5/weapons/grenade_view/viewgrenade_vr_fastthrow.md5anim {
		frame 1					object_call GrenadeNade
		frame 14				object_call GrenadeNoNade
	}
	
	anim raise_mc 					models/md5/weapons/grenade_view/viewgrenade_vr_raise_mc.md5anim {
		frame	1				sound_weapon player_grenade_use
	}
	anim idle_mc 					models/md5/weapons/grenade_view/viewgrenade_vr_idle_mc.md5anim {
		//frame 1					object_call GrenadeNade
	}
	anim putaway_mc 				models/md5/weapons/grenade_view/viewgrenade_vr_lower_mc.md5anim
	anim fire_mc					models/md5/weapons/grenade_view/viewgrenade_vr_fire2_mc.md5anim {
		frame 1					object_call GrenadeNoNade
	}
	anim throw_start_mc 			models/md5/weapons/grenade_view/viewgrenade_vr_start_mc.md5anim {
		// frame 1 				sound_body player_handgrenade_throw
		// Was frame 6 -Xian
	}		
	anim throw_mc					models/md5/weapons/grenade_view/viewgrenade_vr_throw_mc.md5anim {
		
		// koz changed so grenade is released from hand immediately in VR when using motion controls
		frame 1					object_call GrenadeNoNade
		//koz frame 1					object_call GrenadeNade
		//koz frame 8					object_call GrenadeNoNade
		frame 15				object_call GrenadeNade
	}

	anim throw_quick_mc			models/md5/weapons/grenade_view/viewgrenade_vr_fastthrow_mc.md5anim {
		// koz changed so grenade is released from hand immediately in VR when using motion controls
		frame 1					object_call GrenadeNoNade
		//koz frame 1				object_call GrenadeNade
		//koz frame 14				object_call GrenadeNoNade
		//frame 15				object_call GrenadeNade
	}
}

